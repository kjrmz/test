---------------- Invoke mapping ----------------
local INVOKE_ID = {
  spawnbrainrot     = 1,
  executeallevents  = 1,
  executeevent      = 2,
  setmoney          = 3,
  setrebirth        = 4,
  spawnluckyblock   = 5,
}

